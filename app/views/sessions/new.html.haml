= form_for :session, :html => {class: "login centered_form"} do |f|
  .form_group
    = f.label :username
    = f.text_field :username
  .form_group
    = f.label :password
    = f.password_field :password
  .form_group
    = f.submit "Login"
  .form_group
    %a{href: "/users/new"}
      New User? Click here!    

